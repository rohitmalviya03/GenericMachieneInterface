package services;

import com.infosys.common.GeneratedEntities.Patientcase;
import com.infosys.common.util.DAOFactory;

import javafx.concurrent.Service;
import javafx.concurrent.Task;

public class GetCaseService extends Service<Void>
{

	private static Long caseId;
	private Patientcase patientCase;

	private static GetCaseService instance = null;

	public static GetCaseService getInstance(long caseIdVal)
	{
		if(instance == null)
		{
			instance = new GetCaseService();
		}
		caseId = caseIdVal;
		return instance;
	}

	private GetCaseService() {
		super();
	}

	public Patientcase getPatientCase()
	{
		return patientCase;
	}

	@Override
	protected Task<Void> createTask()
	{
		return new Task<Void>()
		{

			@Override
			protected Void call() throws Exception
			{
				try
				{
					patientCase = DAOFactory.createCase().getCreateCaseEntity(caseId);
				}
				catch (Exception e) 
				{
					throw e;
				}

				return null;
			}

		};
	}
}
