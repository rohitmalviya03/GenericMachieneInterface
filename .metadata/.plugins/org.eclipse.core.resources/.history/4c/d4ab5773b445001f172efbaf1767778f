package services;

import java.util.List;

import org.apache.log4j.Logger;

import com.infosys.common.GeneratedEntities.Entityvalues;
import com.infosys.common.util.DAOFactory;

import javafx.concurrent.Service;
import javafx.concurrent.Task;
import model.UserSession;
public class SpecialityOTService extends Service<Void>
{

	private List<Entityvalues> OTlist;
	private static List<Integer> specialityIDList;
	private static final Logger LOG = Logger.getLogger(SpecialityOTService.class);

	private static SpecialityOTService instance = null;

	public static SpecialityOTService getInstance(List<Integer> specialityIDListVal)
	{
		if(instance == null)
		{
			instance = new SpecialityOTService();
		}
		specialityIDList = specialityIDListVal;
		return instance;
	}

	private SpecialityOTService() {
		super();
	}

	public List<Entityvalues> getOTlist()
	{
		return OTlist;
	}


	@Override
	protected Task<Void> createTask()
	{
		return new Task<Void>()
		{

			@Override
			protected Void call() throws Exception
			{
				try
				{
					OTlist = DAOFactory.getOT().getAllOT(specialityIDList, UserSession.getInstance().getUserWithrRolesForUserAuthentication().getUserID());
				}
				catch (Exception e)
				{
					e.printStackTrace();
					LOG.error("## Exception occured:", e);
				}

				return null;
			}

		};
	}
}
